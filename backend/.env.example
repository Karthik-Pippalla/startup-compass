# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/startup-compass
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/startup-compass

# JWT Authentication (REQUIRED)
JWT_SECRET=your-secret-key-change-this-in-production-use-a-long-random-string
JWT_EXPIRE=7d

# Firebase Project ID (if still using Firebase for other services)
FIREBASE_PROJECT_ID=your_project_id

# OpenAI API Key (if needed)
OPENAI_API_KEY=your-openai-api-key

# Optional: If you're using different MongoDB database names
# DB_NAME=startup-compass
